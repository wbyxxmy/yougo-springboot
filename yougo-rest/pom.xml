            <version>${yougo-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.yexj</groupId>
            <artifactId>yougo-rest-depency</artifactId>
            <version>${yougo-rest-depency.version}</version>
        </dependency>
        <!-- poi导出依赖包-->
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>3.10-FINAL</version>
        </dependency>
